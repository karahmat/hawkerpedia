<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>

    <%- include('./partials/header.ejs') %>

    <div class="content">
        <div class="welcome">
            
            <div class="welcometext">
                <h1>Welcome to the Hawkerpedia</h1>                
            </div>           

        </div>

        <% if (!user) { %>
        <div class="introtext">
            <h2><a href="/register">Register Now</a></h2>
            <p>Join the Hawkerpedia community and populate the data of hawker centres in Singapore!</p>
        </div>
        <% } %>
      

        <div class="productContainer">

            <div class="index-hawkerList">
                <h2>Nearest Hawker Centres</h2>
                <ul id="nearestHawkers"><p>Enable location to obtain the 3 nearest hawker centres</p></ul>
            </div>

            <div class="navbar-mini">
                
                <ul>
                    <li class="show-all">Show All</li>
                    <% navigation.forEach( letter => { %>
                        <li class="navbarmini-item"><%= letter %></li>
                    <% }) %>
              
                </ul>
            </div>

            <div class="index-hawkerList">                           

                <h2>List of Hawker Centres</h2>
                <ul id="hawkercentresList">
                    <% data.forEach( (item) => { %>
                        <li class="hawkercentreItem"><a href="/hawkercentre?name=<%= item %>"><%= item %></a></li>
                    <% }) %>
                </ul>    
                
                
                
            </div>            
            
        </div>
    </div>  
    
    <script type="text/javascript" src="/homepageScript.js"></script>
    
</body>
</html>